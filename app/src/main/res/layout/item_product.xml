<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="14dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="26dp"
        >
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#80C8F4"
            android:padding="8dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/asics"
                    android:layout_gravity="center_horizontal"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/model_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="model_id" />
                <TextView
                    android:id="@+id/name_product_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asics gel NYC"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp" />
                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asics gel NYC"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/price_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26dp"
                        android:text="130"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="38dp"
                        />
                    <TextView
                        android:id="@+id/icon_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26dp"
                        android:text="$"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/description_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="фцуша уцгар угцуар шцуарш  цуаштш цуао гцуа шугашгцу"
                    android:textSize="20dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="9dp"
                    android:textAlignment="center"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/ability_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Conts like these shoes"/>

                <ImageButton
                    android:id="@+id/btn_zoom"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="18dp"
                    android:layout_gravity="right"
                    android:src="@android:drawable/arrow_down_float"
                    android:contentDescription="more"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/tovar_favorite_check"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/morea"
            android:layout_gravity="center"

            android:visibility="invisible"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>